
TEST_CASE("Test isValid: 2020 positive", "[j5c_Date]")
{
    j5c_Date d1{2020,01,01};

    // January
    d1.setMonth(1);
    for(int dd = 1; dd < 32; dd++)
    {
        d1.setDay(dd);
        REQUIRE(d1.isValid() == true);
    }

    // February
    d1.setMonth(2);
    for(int dd = 1; dd < 30; dd++)
    {
        d1.setDay(dd);
        REQUIRE(d1.isValid() == true);
